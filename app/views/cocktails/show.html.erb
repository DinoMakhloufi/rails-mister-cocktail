<h1><%= @cocktail.name %></h1>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<% @cocktail.doses.each do |dose| %>
    <%= dose.ingredient.name %>
    <%= dose.description %>
    <%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>



<p><%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %></p>
<p><%= link_to 'Go back to list', cocktails_path, class: "btn btn-primary" %></p>
