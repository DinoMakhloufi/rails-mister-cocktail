<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(http://bonjourporto.fr/wp-content/uploads/2019/06/cocktail.jpg);">
  <div class="container">
    <h1><strong>Super Cocktails</strong></h1>
    <p>Enjoy your life with fun cocktails !</p>
    <%= link_to 'Add a new cocktail', new_cocktail_path, class:"btn btn-flat"  %>
    <!-- <a class="btn btn-flat" href="#">Apply now</a> -->
  </div>
</div>



<div class="container">
  <h1>Cocktails</h1>
    <div class="cards">
      <% @cocktails.each do |cocktail| %>
        <% if cocktail.photo? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo %>')">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
            <% else %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://static.cuisineaz.com/400x320/i120324-cocktail-de-champagne.jpeg')">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
            <% end %>
          </div>
        <% end %>
    </div>
</div>

<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
  </div>
  <div class="footer-copyright">
    This footer is made with <i class="fas fa-heart"></i> pour les alcoolos
  </div>
</div>




